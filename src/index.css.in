/* " must be used instead of ' for proper escaping */

@import url("https://fonts.googleapis.com/css2?family=Noto+Serif+JP&display=swap&text=ALL_CHARACTERS");
* {
    font-family: 'Noto Serif JP', serif;
}

ruby {
    ruby-align: center;
}

.latex sub {
    vertical-align: -0.1ex;
    margin-left: -0.1667em;
    margin-right: -0.025em;
}

.latex sub, .latex sup {
    font-size: 0.9em;
    text-transform: uppercase;
}

.latex sup {
    font-size: 0.85em;
    vertical-align: -0.2em;
    margin-left: -0.26em;
    margin-right: -0.05em;
}

#menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: slategray;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 16px;
    z-index: 1;
    line-height: 1;
    height: 80px;
    color: black;
}

#social-media-icons img {
    margin-right: 16px;
}

#social-media-icons:last-child {
    margin-right: 32px;
}

#social-media-icons img:hover {
    transform: scale(1.25);
}

#furigana-form {
    margin-left: 56px;
}

#furigana-form label {
    display: block;
    margin-top: 4px;
    margin-bottom: 4px;
}

#furigana-form input {
    margin-top: 4px;
    margin-bottom: 4px;
}

body {
    /* Offset keeps top of page from being hidden by menu */
    margin-top: 80px;
}

.author {
    text-align: center;
    margin-bottom: 0;
}

.date {
    text-align: center;
    margin-top: 0;
    margin-bottom: 4em;
}

.subtitle {
    text-align: center;
}

h1 {
    text-align: center;
}

div.sourceCode {
    background-color: #e9e9e9;
    padding: 1em;
    border-radius: 0.5em;
}

@media print {
    #menu {
        display: none;
    }
}
